@model Car
@{
    ViewData["Title"] = "UpdateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Araç Güncelleme</h1>

<form method="post">
    <input type="hidden" asp-for="CarId" /> <!-- CarID'yi gizli bir alan olarak ekledik -->

    <label>Model</label>
    <input type="text" asp-for="Model" class="form-control" style="border:2px solid #2222" />
    <br />
    <label>Araba Kategorisi</label>
    @Html.DropDownListFor(x => x.CarCategoryId, (List<SelectListItem>)ViewBag.CarCategoryList, new { @class = "form-control", style = "border:2px solid #2222;" })
    <br />
    <label>Marka</label>
    @Html.DropDownListFor(x => x.BrandId, (List<SelectListItem>)ViewBag.BrandList, new { @class = "form-control", style = "border:2px solid #2222;" })
    <br />
    <label>Araç Resimi</label>
    <input type="text" asp-for="ImageUrl" class="form-control" style="border:2px solid #2222" />
    <br />
    <label>Vites</label>
    <select asp-for="GearType" class="form-control" style="border:2px solid #2222">
        <option value="Otomatik">Otomatik</option>
        <option value="Yarı Otomatik">Yarı Otomatik</option>
        <option value="Manuel">Manuel</option>
    </select>
    <br />

    <label>Km</label>
    <input type="text" asp-for="Km" class="form-control" style="border:2px solid #2222" />
    <br />
    <label>Kapasite</label>
    <input type="text" asp-for="PersonCount" class="form-control" style="border:2px solid #2222" />
    <br />
    <label>Yıl</label>
    <input type="text" asp-for="Year" class="form-control" style="border:2px solid #2222" />
    <br />
    <label>Araba Statüsü</label>
    @Html.DropDownListFor(x => x.CarstatusId, (List<SelectListItem>)ViewBag.CarStatusList, new { @class = "form-control", style = "border:2px solid #2222;" })
    <br />

    <button class="btn btn-primary">Güncelle</button>
</form>

