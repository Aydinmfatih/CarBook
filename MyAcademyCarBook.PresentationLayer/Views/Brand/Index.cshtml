@model List<MyAcademyCarBook.EntityLayer.Concrete.Brand>
@{
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<h3>Marka Listesi</h3>
<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Marka Adı</th>
        <th>Statü</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BrandId</td>
            <td>@item.BrandName</td>
            @if (item.Status==true)
            {
                <td><span class="label label-success">@item.Status</span></td>
            }
            else
            {
                <td><span class="label label-danger">@item.Status</span></td>
            }
            <td> <a href="/Brand/DeleteBrand/@item.BrandId" class="btn btn-danger">Sil</a></td>
            <td> <a href="/Brand/UpdateBrand/@item.BrandId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Brand/AddBrand" class="btn btn-primary">Yeni Marka Girişi</a>

