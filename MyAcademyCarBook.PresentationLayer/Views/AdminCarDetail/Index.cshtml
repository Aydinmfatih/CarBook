@model List<CarDetail>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h1>Araç Detay Sayfası</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Araç</th>
        <th>Ödeme Planı</th>
        <th>Fiyat</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CarDetailId</td>
            <td>@item.CarId</td>
            <td>@item.Description</td>
            <td>@item.CreatedDate</td>
            <td><a href="/Price/DeletePrice/@item.CarDetailId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Price/UpdatePrice/@item.CarDetailId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Price/CreatePrice" class="btn btn-outline-primary">Yeni Araç Ödeme Girişi</a>

