<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir Yorum Yapın</h3>
    <form method="post" action="/Comment/SendComment">

        <input type="hidden" name="CarId" value="@ViewBag.commentId">

        <div class="form-group">
            <label for="name">Adınız Soyadınız</label>
            <input type="text" name="NameSurname" class="form-control" id="NameSurname">
        </div>

        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea name="Description" id="Description" cols="30" rows="10" class="form-control"></textarea>
        </div>


        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn btn-primary btn-md text-white">
        </div>

    </form>
</div>