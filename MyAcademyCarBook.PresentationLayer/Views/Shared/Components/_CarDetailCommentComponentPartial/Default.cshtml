@model List<Comment>


<h3 class="mb-5">@Model.Count Yorum</h3>
<ul class="comment-list">
    @if (Model.Count == 0)
    {
        <div class="alert alert-danger" role="alert">
            Henüz Hiç Yorum Yapılmamış
        </div>
    }
    else
    {
        @foreach (var item in Model)
        {
            <li class="comment">
                <div class="vcard bio">
                    <img src="~/carrent-master/images/person_2.jpg" alt="Free Website Template by Free-Template.co">
                </div>
                <div class="comment-body">
                    <h3>@item.NameSurname</h3>
                    <div class="meta">@item.CreatedDate.ToShortDateString()</div>
                    <p>@item.Description</p>
                </div>
            </li>
        }
    }
   
   
</ul>